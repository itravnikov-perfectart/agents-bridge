{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "npm",
			"script": "build",
			"group": "build",
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$tsc"
		},
		{
			"label": "watch",
			"type": "npm",
			"script": "dev",
			"group": "build",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"problemMatcher": {
				"owner": "esbuild",
				"pattern": {
					"regexp": "^âœ˜ \\[ERROR\\] (.*)$",
					"message": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\[watch\\] build started$",
					"endsPattern": "^\\[watch\\] build finished$"
				}
			}
		}
	]
}
