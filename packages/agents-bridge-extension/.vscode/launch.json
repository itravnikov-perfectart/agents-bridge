{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Extension (from extension folder)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "build"
		},
		{
			"name": "Launch Extension (from monorepo root)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/agents-bridge-extension"
			],
			"outFiles": [
				"${workspaceFolder}/packages/agents-bridge-extension/dist/**/*.js"
			],
			"preLaunchTask": "build"
		}
	]
}
