{
  "name": "agents-bridge-extension",
  "repository": "https://github.com/itravnikov-perfectart/agents-bridge",
  "displayName": "Agents Bridge",
  "description": "VS Code extension for Agents Bridge",
  "version": "0.0.1",
  "publisher": "agents-bridge",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agent-bridge.getStatus",
        "title": "Agent Bridge: Get Status"
      },
      {
        "command": "agent-bridge.createController",
        "title": "Agent Bridge: Create Controller"
      },
      {
        "command": "agent-bridge.switchController",
        "title": "Agent Bridge: Switch Controller"
      },
      {
        "command": "agent-bridge.setWorkspacePath",
        "title": "Agent Bridge: Set Workspace Path"
      },
      {
        "command": "agent-bridge.showPanel",
        "title": "Agent Bridge: Show Panel"
      },
      {
        "command": "agent-bridge.sendToRoo",
        "title": "Agent Bridge: Send to RooCode"
      },
      {
        "command": "agent-bridge.connectToWSServer",
        "title": "Agent Bridge: Connect to WebSocket Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Agents Bridge",
      "properties": {
        "agent-bridge.defaultRooIdentifier": {
          "type": "string",
          "default": "RooVeterinaryInc.roo-cline",
          "description": "Идентификатор расширения RooCode по умолчанию",
          "scope": "application"
        },
        "agent-bridge.wsUrl": {
          "type": "string",
          "default": "ws://localhost:8080",
          "description": "URL WebSocket сервера",
          "scope": "application"
        },
        "agent-bridge.wsPingInterval": {
          "type": "number",
          "default": 10000,
          "description": "Интервал ping для WebSocket соединения (в миллисекундах)",
          "minimum": 1000,
          "maximum": 60000,
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "compile": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "build": "node ./esbuild.js --production",
    "dev": "node ./esbuild.js --watch",
    "clean": "rm -rf dist out",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "package": "npm run build && vsce package --no-dependencies",
    "vscode:package": "npm run package"
  },
  "dependencies": {
    "agents-bridge-shared": "workspace:*",
    "@roo-code/types": "^1.40.0",
    "@anthropic-ai/sdk": "^0.57.0",
    "es-toolkit": "^1.39.10",
    "uuid": "^9.0.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "@types/vscode": "^1.102.0",
    "@types/ws": "^8.5.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
