{
	"name": "@roo-code/task-runner",
	"description": "Roo Code task runner с Docker образом для выполнения задач.",
	"version": "0.0.0",
	"type": "module",
	"exports": "./src/index.ts",
	"scripts": {
		"lint": "eslint src --ext=ts --max-warnings=0",
		"check-types": "tsc --noEmit",
		"build": "tsc",
		"clean": "rimraf dist .turbo",
		"cli": "tsx src/index.ts",
		"docker:build": "docker build -f Dockerfile -t task-runner .",
		"docker:run": "docker run --rm -it task-runner"
	},
	"dependencies": {
		"@roo-code/ipc": "workspace:^",
		"@roo-code/types": "workspace:^",
		"cmd-ts": "^0.13.0",
		"execa": "^9.6.0",
		"node-ipc": "^12.0.0",
		"p-wait-for": "^5.0.2",
		"zod": "^3.25.61"
	},
	"devDependencies": {
		"@roo-code/config-eslint": "workspace:^",
		"@roo-code/config-typescript": "workspace:^",
		"@types/node": "20.x",
		"@types/node-ipc": "^9.2.3",
		"tsx": "^4.19.3",
		"typescript": "^5.7.3"
	}
} 