{
  "name": "agents-bridge",
  "displayName": "agents-bridge",
  "description": "Bridge extension for integrating with RooCode AI assistant. Provides two-way communication and result execution capabilities.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Data Science",
    "Debuggers",
    "Extension Packs",
    "Programming Languages",
    "Education",
    "Snippets",
    "Testing",
    "Other"
  ],
  "activationEvents": [
    "onLanguage",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agents-bridge.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "agent-maestro.getStatus",
        "title": "Agent Maestro: Get Status"
      },
      {
        "command": "agent-maestro.sendToRoo",
        "title": "Agent Maestro: Send to RooCode",
        "category": "Agent Maestro"
      },
      {
        "command": "agent-maestro.executeRooResult",
        "title": "Agent Maestro: Execute RooCode Result",
        "category": "Agent Maestro"
      }
    ],
    "configuration": {
      "title": "Agent Maestro",
      "properties": {
        "agentMaestro.rooCodeIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable RooCode integration"
        },
        "agentMaestro.rooCodeIdentifier": {
          "type": "string",
          "default": "roo-code",
          "description": "Extension ID of RooCode to integrate with"
        },
        "agentMaestro.autoExecuteResults": {
          "type": "boolean",
          "default": true,
          "description": "Automatically execute results from RooCode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@roo-code/types": "^1.40.0",
    "zod": "^3.25.76",
    "ws": "^8.17.0",
    "dockerode": "^4.0.7",
    "bullmq": "^5.5.0",
    "@types/ws": "^8.5.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  }
}
